<%= form_for @banner, html: {class: 'form-horizontal', role: 'form'} do |f| %>

    <div class="form-group">
      <%= f.label "广告语", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :content, class: 'form-control', placeholder: "输入广告语" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "图片", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.url_field :image, class: 'form-control'%>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "图片", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.url_field :url, class: 'form-control'%>
        </div>
      </div>
    </div>

   

    <%= f.submit '提交', class: "btn btn-success btn-block" %>
    <%= link_to '取消', banners_path, :class => "btn btn-default btn-block" %>

<% end %>