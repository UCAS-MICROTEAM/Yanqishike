<div class="container-fluid">
  <div class="row">

     <div class="col-md-offset-2 col-sm-8">

      <div class="panel panel-primary">
          
      </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>id</th>
              <th>内容</th>
              <th>用户id</th>
              <th>用户名字</th>
            </tr>

            <tbody>
            <% @cards.each do |card| %>
                <tr>
                  <td><%= card.id %></td>
                  <td><%= card.content %></td>
                  <td><%= card.user.id%></td>
                  <td><%= card.user.name%></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>