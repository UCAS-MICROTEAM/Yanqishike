<%= form_tag controller: "statuses", action: "create", method: "post" do %> 
    
  <label for="content">输入内容</label>
  <%= text_field_tag :content, params[:content],  class:"form-control", placeholder: "输入内容" %>
  <label for="merchant_name">商家名称(从下方列表中点击选择，或自定义填写)</label>
  <%= text_field_tag :merchant_name, params["merchant_name"] ,  class: 'form-control', placeholder: "输入商家名称", id: "id_form_merchant_name"  %>
  <label for="food_name">美食名称(可从下方列表中点击选择，或自定义填写)</label>
  <%= text_field_tag :food_name, params["food_name"] ,  class: 'form-control', placeholder: "输入food名称", id: "id_form_food_name"  %>
  
  <label for="tag_name">标签</label>
  <%= select_tag :tag_id, options_for_select(Tag.all.collect{|m| [m.name, m.id]}, params[:tag_name]), class: "ui dropdown" %>
  <!--<div class="form-group">-->
  <!--    <div class="col-sm-9">-->
  <!--      <div class="input-group">-->
  <!--        <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>-->
          
  <!--      </div>-->
  <!--    </div>-->
  <!--  </div>-->
  
  <%= submit_tag "创建" , class: "btn btn-success btn-block" %>
  <%= link_to '取消', statuses_path, :class => "btn btn-default btn-block" %>
  <!--password_field_tag是密码输入框-->
<% end %>


