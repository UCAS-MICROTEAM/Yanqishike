<div class="container-fluid">
  <div class="row">

     <div class="col-md-offset-2 col-sm-8">
       <div class="panel panel-primary" style = "margin-top : 10px">
          <div class="panel-heading">
          <h3 class="panel-title">我发布的动态 <%= link_to "创建", new_status_path, class: 'btn btn-xs btn-info' %>  <%= link_to "返回",  profile_index_path, class: 'btn btn-xs btn-info' %></h3>
          </div>
      </div>

        <div class="panel-body">
          
          <table class="table table-responsive table-condensed table-hover">
             
            <thead>
            <tr>
              <th>id</th>
              <th>内容</th>
              <th>美食id</th>
              <th>美食名</th>
              <th>商家id</th>
              <th>商家名</th>
              <th>用户id</th>
              <th>用户名字</th>
            </tr>

            <tbody>
            <% @statuses.each do |status| %>
                <tr>
                  <td><%= status.id %></td>
                  <td><%= status.content %></td>
                  <td><%= status.food.id %></td>
                  <td><%= status.food.name %></td>
                  <td><%= status.food.merchant.id %></td>
                  <td><%= status.food.merchant.name %></td>
                  <td><%= status.user.id %></td>
                  <td><%= status.user.name %></td>
                  <td><%= link_to "删除", status_path(status), :method => "delete", class: 'btn btn-xs btn-danger', :data => {confirm: '确定要删除此动态?'} %></td>
                  <td><%=link_to "详情", status_path(status) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
           
      </div>
    </div>
  </div>
</div>