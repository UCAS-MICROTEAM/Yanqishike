<div class="container-fluid">
  <div class="row">

     <div class="col-md-offset-2 col-sm-8">

      <div class="panel panel-primary">
          
      </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>id</th>
              <th>内容</th>
              <th>美食id</th>
              <th>美食名</th>
              <th>用户id</th>
              <th>用户名字</th>
            </tr>

            <tbody>
            <% @statuses.each do |status| %>
                <tr>
                  <td><%= status.id %></td>
                  <td><%= status.content %></td>
                  <td><%= status.food.id%></td>
                  <td><%= status.food.name%></td>
                  <td><%= status.user.id%></td>
                  <td><%= status.user.name%></td>
                  <td>
                  <% if current_user!=nil and current_user.zans.where(status_id: status.id).first!=nil %>
                  <%= link_to deletezan_status_path(status), method: :delete, remote: true do %>
                  <span style = "float:right ; margin-right:5px ">取消赞</span>
                  <% end %>
                  <% else %>
                  <%= link_to createzan_status_path(status.id), method: :post do %>
                  <span style = "float:right ; margin-right:5px "> <img src="/assets/like1.png" alt="like"  > 赞</span>
                  <% end %>
                  <% end %>
                  </td>
                  <td><%=link_to "详情", status_path(status) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>